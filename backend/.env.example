# Database Configuration (Docker)
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/sales_crm_dev"
DATABASE_URL_TEST="postgresql://postgres:postgres123@localhost:5432/sales_crm_test"

# JWT Configuration
JWT_SECRET="sales-crm-super-secret-jwt-key-2024-make-it-long-and-random"
JWT_EXPIRATION="15m" # Access token expiration
JWT_REFRESH_SECRET="sales-crm-super-secret-refresh-key-2024"
JWT_REFRESH_EXPIRATION="7d" # Refresh token expiration

# Application Configuration
NODE_ENV="development"
PORT=3001
API_PREFIX="api/v1"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Redis Configuration (Docker)
REDIS_URL="redis://:redis123@localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="redis123"

# Email Configuration (Development with Mailhog)
EMAIL_HOST="localhost"
EMAIL_PORT=1025
EMAIL_USER=""
EMAIL_PASS=""
EMAIL_FROM="Sales CRM <noreply@salescrm.dev>"

# Social Login Configuration (Update with your actual credentials)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/google/callback"

LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"
LINKEDIN_CALLBACK_URL="http://localhost:3001/api/v1/auth/linkedin/callback"

# File Storage Configuration (MinIO Docker)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_BUCKET_NAME="sales-crm-files"
S3_REGION="us-east-1"
MINIO_CONSOLE_ENDPOINT="http://localhost:9001"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60 # seconds
RATE_LIMIT_MAX=100 # max requests per TTL
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=30 # minutes

# Payment Gateway (Stripe) - Update with test keys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Monitoring and Logging
LOG_LEVEL="debug"
ENABLE_SWAGGER=true
SWAGGER_PATH="/api/docs"

# Session Configuration
SESSION_SECRET="sales-crm-session-secret-2024"
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# GDPR Compliance
DATA_RETENTION_DAYS=2555 # 7 years
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOAD=true
ENABLE_PAYMENT_INTEGRATION=false
ENABLE_EMAIL_NOTIFICATIONS=true

# Development Tools (Optional)
ENABLE_PGADMIN=true
PGADMIN_URL="http://localhost:8080"
PGADMIN_EMAIL="admin@salescrm.com"
PGADMIN_PASSWORD="admin123"

ENABLE_MAILHOG=true
MAILHOG_URL="http://localhost:8025"

# Testing
TEST_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/sales_crm_test"